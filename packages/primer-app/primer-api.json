{
    "components": {
        "schemas": {
            "InitialApp": {
                "type": "string",
                "enum": [
                    "NewApp",
                    "NewEmptyApp"
                ]
            },
            "Def": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "type_",
                    "term"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "term": {
                        "$ref": "#/components/schemas/Tree"
                    },
                    "type_": {
                        "$ref": "#/components/schemas/Tree"
                    },
                    "id": {
                        "minimum": -9223372036854775808,
                        "type": "integer",
                        "maximum": 9223372036854775807
                    }
                }
            },
            "Prog": {
                "type": "object",
                "required": [
                    "types",
                    "defs"
                ],
                "properties": {
                    "defs": {
                        "items": {
                            "$ref": "#/components/schemas/Def"
                        },
                        "type": "array"
                    },
                    "types": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array"
                    }
                }
            },
            "PaginatedMeta": {
                "type": "object",
                "required": [
                    "totalItems",
                    "pageSize",
                    "firstPage",
                    "thisPage",
                    "lastPage"
                ],
                "properties": {
                    "totalItems": {
                        "minimum": 0,
                        "type": "integer",
                        "maximum": 9223372036854775807
                    },
                    "pageSize": {
                        "minimum": 0,
                        "type": "integer",
                        "exclusiveMinimum": true,
                        "maximum": 9223372036854775807
                    },
                    "nextPage": {
                        "minimum": 0,
                        "type": "integer",
                        "exclusiveMinimum": true,
                        "maximum": 9223372036854775807
                    },
                    "thisPage": {
                        "minimum": 0,
                        "type": "integer",
                        "exclusiveMinimum": true,
                        "maximum": 9223372036854775807
                    },
                    "firstPage": {
                        "minimum": 0,
                        "type": "integer",
                        "exclusiveMinimum": true,
                        "maximum": 9223372036854775807
                    },
                    "lastPage": {
                        "minimum": 0,
                        "type": "integer",
                        "exclusiveMinimum": true,
                        "maximum": 9223372036854775807
                    },
                    "prevPage": {
                        "minimum": 0,
                        "type": "integer",
                        "exclusiveMinimum": true,
                        "maximum": 9223372036854775807
                    }
                }
            },
            "Tree": {
                "type": "object",
                "required": [
                    "nodeId",
                    "label",
                    "childTrees"
                ],
                "properties": {
                    "childTrees": {
                        "items": {
                            "$ref": "#/components/schemas/Tree"
                        },
                        "type": "array"
                    },
                    "nodeId": {
                        "minimum": -9223372036854775808,
                        "type": "integer",
                        "maximum": 9223372036854775807
                    },
                    "label": {
                        "type": "string"
                    }
                }
            },
            "Session": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "name": {
                        "$ref": "#/components/schemas/SessionName"
                    },
                    "id": {
                        "$ref": "#/components/schemas/UUID"
                    }
                }
            },
            "Paginated_Session": {
                "type": "object",
                "required": [
                    "meta",
                    "items"
                ],
                "properties": {
                    "items": {
                        "items": {
                            "$ref": "#/components/schemas/Session"
                        },
                        "type": "array"
                    },
                    "meta": {
                        "$ref": "#/components/schemas/PaginatedMeta"
                    }
                }
            },
            "UUID": {
                "type": "string",
                "format": "uuid",
                "example": "00000000-0000-0000-0000-000000000000"
            },
            "SessionName": {
                "type": "string"
            }
        }
    },
    "paths": {
        "/api/sessions": {
            "post": {
                "responses": {
                    "400": {
                        "description": "Invalid `body`"
                    },
                    "200": {
                        "content": {
                            "application/json;charset=utf-8": {
                                "schema": {
                                    "$ref": "#/components/schemas/UUID"
                                }
                            }
                        },
                        "description": ""
                    }
                },
                "operationId": "createSession",
                "summary": "Create a new session",
                "requestBody": {
                    "content": {
                        "application/json;charset=utf-8": {
                            "schema": {
                                "$ref": "#/components/schemas/InitialApp"
                            }
                        }
                    }
                }
            },
            "get": {
                "responses": {
                    "400": {
                        "description": "Invalid `pageSize` or `page` or `inMemory`"
                    },
                    "200": {
                        "content": {
                            "application/json;charset=utf-8": {
                                "schema": {
                                    "$ref": "#/components/schemas/Paginated_Session"
                                }
                            }
                        },
                        "description": ""
                    }
                },
                "operationId": "getSessionList",
                "summary": "List sessions",
                "parameters": [
                    {
                        "in": "query",
                        "name": "inMemory",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        },
                        "allowEmptyValue": true
                    },
                    {
                        "in": "query",
                        "name": "page",
                        "required": false,
                        "schema": {
                            "minimum": 0,
                            "type": "integer",
                            "exclusiveMinimum": true,
                            "maximum": 9223372036854775807
                        }
                    },
                    {
                        "in": "query",
                        "name": "pageSize",
                        "required": false,
                        "schema": {
                            "minimum": 0,
                            "type": "integer",
                            "exclusiveMinimum": true,
                            "maximum": 9223372036854775807
                        }
                    }
                ]
            }
        },
        "/api/program": {
            "get": {
                "responses": {
                    "400": {
                        "description": "Invalid `session`"
                    },
                    "200": {
                        "content": {
                            "application/json;charset=utf-8": {
                                "schema": {
                                    "$ref": "#/components/schemas/Prog"
                                }
                            }
                        },
                        "description": ""
                    }
                },
                "parameters": [
                    {
                        "in": "query",
                        "name": "session",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ]
            }
        }
    },
    "openapi": "3.0.0",
    "info": {
        "title": "Primer backend API",
        "description": "A backend service implementing a pedagogic functional programming language.",
        "version": "0.7"
    }
}
